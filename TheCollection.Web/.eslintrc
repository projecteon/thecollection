{
    "rules": {
        "space-before-blocks": 2,
        "indent": [2, 2, {"SwitchCase": 1, "VariableDeclarator": 2}],
        "brace-style": [2, "1tbs", { "allowSingleLine": true }],
        "keyword-spacing": 2,
        "strict": 2,
        "no-console": 2,
        "no-unused-expressions": 2,
        "eol-last": 2,
        "dot-location": [2, "property"],
        "consistent-return": 2,
        "no-unused-vars": [2, {"args": "none"}],
        "quotes": [ 2, "single", "avoid-escape" ],
        "no-shadow": 2,
        "no-multi-spaces": 2,
        "no-undef": 0,
        "yoda": 0,
        "camelcase": 0,
        "comma-dangle": 0,
        "dot-notation": 0,
        "eqeqeq": 0,
        "space-infix-ops": [2, {"int32Hint": true}],
        //DISABLED. These aren't compatible with our style
        //We use this for private/internal variables
        "no-underscore-dangle": 2,
        //We pass constructors around / access them from members
        "new-cap": 2,
        //We do this a lot.
        "no-use-before-define": 2,
        //We do this in a few places to align values
        "key-spacing": 0,
        //It's nice to be able to leave catch blocks empty
        "no-empty": 2,
        // default from init
        "linebreak-style": [ 2, "unix" ]
        //"semi": [ 2, "never" ]
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ]
}